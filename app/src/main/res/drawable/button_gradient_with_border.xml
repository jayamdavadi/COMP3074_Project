<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- Gradient Colors -->
            <gradient
                android:angle="45"
                android:startColor="#FFA726"
            android:endColor="#FB8C00"
            android:type="linear" />

            <!-- Rounded Corners -->
            <corners android:radius="16dp" />

            <!-- Border -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- White Border -->
        </shape>
    </item>
</layer-list>
