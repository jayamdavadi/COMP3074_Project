<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurantNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/restaurantAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Address"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/rateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate This Restaurant"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/viewOnMapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View On Map"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/getDirectionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Directions"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnFullScreenMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Full-Screen Map"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Share Buttons -->
        <Button
            android:id="@+id/btnShareEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share via Email"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnShareFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share on Facebook"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnShareTwitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share on Twitter" />
    </LinearLayout>
</ScrollView>
